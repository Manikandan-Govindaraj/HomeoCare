@model HomeoCare.Models.ViewModels.RegisterModel

@section Styles{
    <style>

        .border-md {
            border-width: 2px;
        }


        .form-control:not(select) {
            padding: 1.5rem 0.5rem;
        }

        select.form-control {
            height: 52px;
            padding-left: 0.5rem;
        }

        .form-control::placeholder {
            color: #ccc;
            font-size: 0.9rem;
        }

        .form-control:focus {
            box-shadow: none;
        }
    </style>
}


<div class="container py-md-4">
    <div class="row mt-4 align-items-center">
        <!-- Registeration Form -->
        <div class="col-md-7 col-lg-6 offset-md-3">
            <form method="post" style="text-align:center;">
                <span>Create a new account.</span>
                <hr />
                <div class="row">

                    <!-- First Name -->
                    <div class="col-lg-6 mb-4">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-white px-4 border-md border-right-0">
                                    <i class="fa fa-user text-muted"></i>
                                </span>
                            </div>
                            <input type="text" asp-for="@Model.FirstName" placeholder="First Name" class="form-control bg-white border-left-0 border-md">
                        </div>
                        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                    </div>

                    <!-- Last Name -->
                    <div class="col-lg-6 mb-4">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-white px-4 border-md border-right-0">
                                    <i class="fa fa-user text-muted"></i>
                                </span>
                            </div>
                            <input type="text" asp-for="@Model.LastName" placeholder="Last Name" class="form-control bg-white border-left-0 border-md">
                        </div>
                        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                    </div>

                    <!-- Email Address -->
                    <div class="col-lg-12 mb-4">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-white px-4 border-md border-right-0">
                                    <i class="fa fa-envelope text-muted"></i>
                                </span>
                            </div>
                            <input type="email" asp-for="@Model.Email" placeholder="Email Address" class="form-control bg-white border-left-0 border-md">
                        </div>
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>

                    <!-- Phone Number -->
                    <div class="col-lg-12 mb-4">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-white px-4 border-md border-right-0">
                                    <i class="fa fa-phone-square text-muted"></i>
                                </span>
                            </div>
                            <input type="text" asp-for="@Model.PhoneNumber" placeholder="Phone Number" class="form-control bg-white border-md border-left-0 pl-3">
                        </div>
                        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                    </div>

                    <!-- Password -->
                    <div class="col-lg-6 mb-4">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-white px-4 border-md border-right-0">
                                    <i class="fa fa-lock text-muted"></i>
                                </span>
                            </div>
                            <input asp-for="@Model.Password" placeholder="Password" class="form-control bg-white border-left-0 border-md">
                        </div>
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>

                    <!-- Password Confirmation -->
                    <div class="col-lg-6 mb-4">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-white px-4 border-md border-right-0">
                                    <i class="fa fa-lock text-muted"></i>
                                </span>
                            </div>
                            <input asp-for="@Model.ConfirmPassword" placeholder="Confirm Password" class="form-control bg-white border-left-0 border-md">
                        </div>                
                        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group col-lg-12 mx-auto mb-0">
                        <button type="submit" class="btn btn-primary btn-block py-2">
                            <span class="">Create account</span>
                        </button>
                    </div>

                    <!-- Divider Text -->
                    <div class="form-group col-lg-12 mx-auto d-flex align-items-center my-4">
                        <div class="border-bottom w-100 ml-5"></div>
                        <span class="px-2 small text-muted ">OR</span>
                        <div class="border-bottom w-100 mr-5"></div>
                    </div>

                    <!-- Already Registered -->
                    <div class="text-center w-100">
                        <p class="text-muted ">Already Registered? <a href="@Url.Action("Login","Auth")" class="text-primary ml-2">Login</a></p>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>

        // For Demo Purpose [Changing input group text on focus]
        $(function () {
            $(".liRegister").addClass('active');
            $('input, select').on('focus', function () {
                $(this).parent().find('.input-group-text').css('border-color', '#80bdff');
            });
            $('input, select').on('blur', function () {
                $(this).parent().find('.input-group-text').css('border-color', '#ced4da');
            });
        });


    </script>
}