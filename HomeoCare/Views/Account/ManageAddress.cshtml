@model AddressDetails

<form method="post">
    <div class="container py-md-4">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card-header bg-dark text-light ml-0 row container">Address Details</div>
                <br />
                @Html.HiddenFor(model => Model.UserID)
                @Html.HiddenFor(model => Model.AddressID)
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.ContactName"></label>
                            <input asp-for="@Model.ContactName" class="form-control" />
                            <span asp-validation-for="@Model.ContactName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.Mobile"></label>
                            <input asp-for="@Model.Mobile" class="form-control" />
                            <span asp-validation-for="@Model.Mobile" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.AddressLine1"></label>
                    <input asp-for="@Model.AddressLine1" class="form-control" />
                    <span asp-validation-for="@Model.AddressLine1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Lankmark"></label>
                    <input asp-for="@Model.Lankmark" class="form-control" />
                    <span asp-validation-for="@Model.Lankmark" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.City"></label>
                            <input asp-for="@Model.City" class="form-control" />
                            <span asp-validation-for="@Model.City" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.State"></label>
                            <input asp-for="@Model.State" class="form-control" />
                            <span asp-validation-for="@Model.State" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.PinCode"></label>
                            <input asp-for="@Model.PinCode" class="form-control" />
                            <span asp-validation-for="@Model.PinCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.AlternateMobile"></label>
                            <input asp-for="@Model.AlternateMobile" class="form-control" />
                            <span asp-validation-for="@Model.AlternateMobile" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $(".liAccount").addClass('active');
        });
    </script>
}