@model HomeoCare.Models.Product



<form method="post">

    <input asp-for="ProductID" hidden />

    <div class="container py-md-4">

        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Product</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ProductName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ProductName" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SellingPrice"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="SellingPrice" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Description" class="form-control summernote"></textarea>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Category.Name" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">

                            <button type="submit" class="btn btn-danger w-100">Delete</button>


                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4 ">
                @* Keep this empty *@
                @if (Model.ProductID != 0)
                {
    <img src="@WC.ImagePath@Model.ImagePath" class="w-100" style="border-radius:5px; border:1px solid #bbb" />}
            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{ <partial name="_ValidationScriptsPartial" /> }
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250,
                disable: true
            });
        });

    </script>
}